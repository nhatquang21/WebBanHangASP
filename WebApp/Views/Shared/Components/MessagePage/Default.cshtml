@model WebApp.MessagePage.Message
@{
    Layout = "_Layout";
    ViewData["Title"] = @Model.title;
}
<div class="card m-4" style="
    border: 1px solid black;
">
   <div class="card-header bg-danger text-light" style=" display: flex;align-items: center; background: #B50000; padding: 20px 20px;">
    <h3 style="  color: white;  margin: 0;">@Model.title</h3>
     </div>
    <div class="card-body" style="  padding: 15px 20px;">
           @Html.Raw(Model.htmlcontent)
    </div>
   <div class="card-footer" style=" padding: 15px 20px; background: lightslategray;  color: white;  font-size: 13px;">
         Chuyển đến - <a style="color: white;" href="@Model.urlredirect">@Model.urlredirect</a>
       </div> 
  
  </div>
  
  
  
    
  
  
   
   
  
  

     
 
